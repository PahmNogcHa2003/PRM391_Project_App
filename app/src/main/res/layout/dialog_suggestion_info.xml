<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_bg"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgDialog"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/tvDialogName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên quán"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvDialogDistrict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quận: ..." />

    <TextView
        android:id="@+id/tvDialogRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đánh giá: ⭐⭐⭐⭐⭐"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnDialogRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gợi ý lại" />

        <Button
            android:id="@+id/btnDialogDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem chi tiết"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
