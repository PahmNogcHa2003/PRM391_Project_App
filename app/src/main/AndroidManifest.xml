<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:targetApi="31">

        <!-- Các Activity admin và hệ thống khác -->
        <activity
            android:name=".controllers.admin.UpdateRestaurantDashboard"
            android:exported="false" />
        <activity
            android:name=".controllers.admin.StatisticDashboard"
            android:exported="false" />
        <activity
            android:name=".controllers.admin.RestaurantDetailDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".controllers.activities.ReviewActivity"
            android:exported="false" />

        <!-- Login activity - Launcher -->
        <activity
            android:theme="@style/Theme.PRM391_Project_AppRestaurants"
            android:name=".controllers.Login.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".controllers.admin.FilterActivity"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Restaurant Management Activity -->
        <activity
            android:name=".controllers.admin.RestaurantManagementActivity"
            android:exported="false"
            android:label="@string/title_activity_restaurant_management"
            android:theme="@style/Theme.PRM391_Project_AppRestaurants" />

        <!-- Trang Home của user -->
        <activity
            android:name=".controllers.user.UserHomeActivity"
            android:exported="false" />

        <!-- Thêm 2 activity chuyển trang chi tiết và danh sách yêu thích -->
        <activity
            android:name=".controllers.detail.RestaurantDetailActivity"
            android:exported="false" />
        <activity
            android:name=".controllers.favorite.FavoriteListActivity"
            android:exported="false" />

        <!-- Metadata for fonts -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
