+        holder.tvAddress.setText(r.getAddress());
+        holder.tvCategory.setText(r.getCategory());
+        holder.tvPriceRange.setText(r.getPriceRange());
+
+        // Chỉ dùng icon trong drawable cho ảnh quán ăn
+        holder.imgRestaurant.setImageResource(R.drawable.restaurant);
+
+        // Icon trái tim đầy (yêu thích)
