+package com.example.prm391_project_apprestaurants.controllers.admin;
+
+import android.os.Bundle;
+import android.graphics.drawable.Drawable;
+import android.widget.ImageView;
+import android.widget.TextView;
+import android.widget.Button;
+import android.widget.Toast;
+import androidx.appcompat.app.AppCompatActivity;
+import androidx.core.content.ContextCompat;
+import com.bumptech.glide.Glide;
+import com.example.prm391_project_apprestaurants.dal.RestaurantDBContext;
+import com.example.prm391_project_apprestaurants.entities.Restaurant;
+import com.example.prm391_project_apprestaurants.R;
+
+public class RestaurantDetailActivity extends AppCompatActivity {
+
+    private RestaurantDBContext dbContext;
+    private int restaurantId, userId;
+    private Restaurant restaurant;
+
+    @Override
+    protected void onCreate(Bundle savedInstanceState) {
+        super.onCreate(savedInstanceState);
+        setContentView(R.layout.activity_restaurant_detail);
+
+        // Lấy restaurantId từ Intent (phải truyền đúng từ màn danh sách)
+        restaurantId = getIntent().getIntExtra("RESTAURANT_ID", -1);
+        userId = 2; // Thay bằng userId thực tế nếu có đăng nhập
+
+        dbContext = new RestaurantDBContext(this);
+
+        ImageView ivImage = findViewById(R.id.ivImage);
+        TextView tvName = findViewById(R.id.tvName);
+        TextView tvAddress = findViewById(R.id.tvAddress);
+        TextView tvDistrict = findViewById(R.id.tvDistrict);
+        TextView tvCategory = findViewById(R.id.tvCategory);
+        TextView tvPrice = findViewById(R.id.tvPrice);
+        TextView tvOpening = findViewById(R.id.tvOpening);
+        TextView tvPhone = findViewById(R.id.tvPhone);
+        TextView tvWebsite = findViewById(R.id.tvWebsite);
+        TextView tvCoordinates = findViewById(R.id.tvCoordinates);
+        TextView tvDescription = findViewById(R.id.tvDescription);
+        Button btnFavorite = findViewById(R.id.btnFavorite);
+
+        restaurant = dbContext.getRestaurantById(restaurantId);
+
+        if (restaurant != null) {
+            tvName.setText(restaurant.getName());
+            tvAddress.setText("Địa chỉ: " + restaurant.getAddress());
+            tvDistrict.setText("Quận/Huyện: " + restaurant.getDistrict());
+            tvCategory.setText("Loại: " + restaurant.getCategory());
+            tvPrice.setText("Giá: " + restaurant.getPriceRange());
+            tvOpening.setText("Giờ mở cửa: " + restaurant.getOpeningHours());
+            tvPhone.setText("SĐT: " + restaurant.getPhoneNumber());
+            tvWebsite.setText("Website: " + (restaurant.getWebsite() == null || restaurant.getWebsite().isEmpty() ? "Không có" : restaurant.getWebsite()));
+            tvCoordinates.setText("Tọa độ: " + restaurant.getLatitude() + ", " + restaurant.getLongitude());
+            tvDescription.setText(restaurant.getDescription());
+
+            Glide.with(this)
+                    .load(restaurant.getImage())
+                    .placeholder(R.drawable.ic_launcher_background)
+                    .into(ivImage);
+
+            updateFavoriteButton(btnFavorite, dbContext.isFavorite(userId, restaurantId));
+        } else {
+            tvName.setText("Không tìm thấy dữ liệu quán ăn!");
+        }
+
+        btnFavorite.setOnClickListener(v -> {
+            boolean isFav = dbContext.isFavorite(userId, restaurantId);
+            if (isFav) {
+                dbContext.removeFavorite(userId, restaurantId);
+                Toast.makeText(this, "Đã bỏ khỏi danh sách yêu thích", Toast.LENGTH_SHORT).show();
+            } else {
+                dbContext.addFavorite(userId, restaurantId);
+                Toast.makeText(this, "Đã thêm vào danh sách yêu thích", Toast.LENGTH_SHORT).show();
+            }
+            updateFavoriteButton(btnFavorite, dbContext.isFavorite(userId, restaurantId));
+        });
+    }
+
+    private void updateFavoriteButton(Button btn, boolean isFavorite) {
+        int iconRes = isFavorite ? R.drawable.ic_favorite : R.drawable.ic_favorite_border;
+        Drawable icon = ContextCompat.getDrawable(this, iconRes);
+        if (icon != null) {
+            int iconSize = (int) (getResources().getDisplayMetrics().density * 18); // 18dp
+            icon.setBounds(0, 0, iconSize, iconSize);
+            btn.setCompoundDrawables(icon, null, null, null);
+        }
+        btn.setText(isFavorite ? R.string.remove_from_favorite : R.string.add_to_favorite);
+        btn.setBackgroundTintList(ContextCompat.getColorStateList(this,
+                isFavorite ? R.color.pink : R.color.teal_700));
+    }
+}
